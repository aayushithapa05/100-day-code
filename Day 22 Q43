#include <stdio.h>

int main()
{
    int num,temp,sum=0,d,mul=1;
    printf("Enter the value of n..");
    scanf("%d",&num);
    temp=num;
    while (num>0)
    {
        d=num%10;
        for(int i=1;i<=d;i++)
        {
            mul=mul*i;
        }
        sum=sum+mul;
        mul=1;
        num=num/10;
    }
    if (sum==temp)
    {
        printf("It is a Strong number");
    }
    else
    {
        printf("It is Not a Strong number");
    }
    
    return 0;
}
