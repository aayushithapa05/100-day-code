#include <stdio.h>

void binary1(int n)
{
    if (n>1)
    {
        binary1(n/2);
    }
    if(n%2==0)
    {
        printf("%d",1);
    }
    else
    {
        printf("%d",0);
    }
}

int main()
{
    int num;
    printf("Enter the number..");
    scanf("%d",&num);
    printf("The equivalent 1's complement of the number is ..");
    if(num==0)
    {
        printf("%d",1);
    }
    else
    {
        binary1(num);
    }
    return 0;
}
