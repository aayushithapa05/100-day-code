#include <stdio.h>

enum Role {
    ADMIN = 1,
    USER,
    GUEST
};

int main() {
    // Array holding the string names of enum members
    const char *roleNames[] = {"ADMIN", "USER", "GUEST"};

    enum Role r;

    printf("Enum values and names:\n\n");

    // Loop from ADMIN (1) to GUEST (3)
    for (r = ADMIN; r <= GUEST; r++) {
        printf("%d  -  %s\n", r, roleNames[r - 1]);
    }

    return 0;
}
