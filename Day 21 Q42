int main()
{
    int num,sum=0;
    printf("Enter the value of n..");
    scanf("%d",&num);
    for (int i=1;i<=num-1;i++)
    {
        if(num%i==0)
        {
            sum=sum+i;
        }
    }
    if (sum==num)
    {
        printf("The is a perfect number");
    }
    else
    {
        printf("Not a Perfect number");
    }
    return 0;
}
