#include <stdio.h>

int main()
{
    int num,d,new=0;
    printf("Enter the value of n..");
    scanf("%d",&num);
    int temp=num;
    while (num>0)
    {
        d=num%10;
        new=new*10+d;
        num=num/10;
    }
    if (new==temp)
    {
        printf("It is A Palindrom");
    }
    else
    {
        printf("Not A Palindrom");
    }
    
    return 0;
}
