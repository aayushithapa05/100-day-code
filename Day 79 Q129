#include <stdio.h>

int main() {
    FILE *fp;
    fp = fopen("numbers.txt", "r");

    if (fp == NULL) {
        printf("Unable to open file.\n");
        return 0;
    }

    int num, sum = 0, count = 0;

    while (fscanf(fp, "%d", &num) == 1) {
        sum += num;
        count++;
    }

    fclose(fp);

    if (count == 0) {
        printf("No numbers found.\n");
        return 0;
    }

    float average = (float)sum / count;

    printf("Sum = %d\n", sum);
    printf("Average = %.2f\n", average);

    return 0;
}
