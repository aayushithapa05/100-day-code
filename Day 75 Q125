#include <stdio.h>

int main() {
    FILE *fp;
    char filename[100];
    char newLine[200];

    printf("Enter filename to append: ");
    scanf("%s", filename);
    getchar();

    fp = fopen(filename, "a");
    if (fp == NULL) {
        printf("File not found.\n");
        return 0;
    }

    printf("Enter text to append: ");
    fgets(newLine, sizeof(newLine), stdin);

    fputs(newLine, fp);
    fclose(fp);

    printf("Text appended successfully.\n");

    return 0;
}
