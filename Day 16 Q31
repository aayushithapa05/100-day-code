#include <stdio.h>

void binary(int n)
{
    if (n>1)
    {
        binary(n/2);
    }
    printf("%d",n%2);
}

int main()
{
    int num;
    printf("Enter the number..");
    scanf("%d",&num);
    printf("The aequivalent binary representaion is ..  ");
    if(num==0)
    {
        printf("%d",0);
    }
    else
    {
        binary(num);
    }
    return 0;
}
